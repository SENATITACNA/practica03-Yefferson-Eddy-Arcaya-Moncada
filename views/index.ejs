<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Usuarios</title>
  <link rel="stylesheet" href="styles.css">
</head>
<body>
  <h1>Lista de Usuarios</h1>
  <a href="/nuevo" class="btn-nuevo">Nuevo Usuario</a>
  <table>
    <thead>
      <tr>
        <th>ID</th><th>Nombre</th><th>Correo</th><th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% users.forEach(user => { %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.nombre %></td>
        <td><%= user.correo %></td>
        <td>
          <a href="/editar/<%= user.id %>" class="btn-editar">Editar</a>
          <a href="/eliminar/<%= user.id %>" onclick="return confirm('Â¿Eliminar?')" class="btn-eliminar">Eliminar</a>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>
